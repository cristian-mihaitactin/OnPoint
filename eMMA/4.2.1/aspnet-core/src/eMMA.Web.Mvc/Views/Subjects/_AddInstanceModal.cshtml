@using Abp.Authorization.Users
@using eMMA.Web.Startup
@using eMMA.Web.Models.Common.Modals
@model eMMA.Web.Models.UniSubjects.CreateSubjectInstanceModel
@{
    Layout = null;
}
@section scripts
    {
    <script src="~/view-resources/Views/Subjects/_AddInstanceModal.js" asp-append-version="true"></script>
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("AddInstance")))

@* <h2>Add Subject Instance</h2> *@

<div class="modal-body">
    <form name="subjectInstanceCreateForm" role="form" novalidate class="form-validation">
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#create-instance-details" data-toggle="tab">@L("InstanceDetails")</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="create-instance-details">
                <div class="row clearfix" style="margin-top: 10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" name="Name" required minlength="2">
                                <label class="form-label">@L("InstanceName")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix" style="margin-top: 10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="Description" class="form-control" required>
                                <label class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-line">
                            <label class="form-label">@L("InstanceType")</label>
                            <button type="button" class="btn btn-primary waves-effect">@L("AsSeminar")</button>
                            <button type="button" class="btn btn-primary waves-effect">@L("AsLaboratory")</button>
                            <button type="button" class="btn btn-primary waves-effect">@L("AsCourse")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")