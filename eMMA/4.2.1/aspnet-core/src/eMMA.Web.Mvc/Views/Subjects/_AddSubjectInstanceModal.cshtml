@using System.Threading.Tasks
@using Abp.Authorization.Users
@using eMMA.Web.Models.Common.Modals
@model eMMA.Web.Models.UniSubjects.CreateSubjectInstanceModel

@{
    ViewData["Title"] = "_AddSubjectInstanceModal";
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Add Instance")))

<h2>_AddSubjectInstanceModal</h2>

<div class="modal fade" id="AddSubjectInstance" tabindex="-1" role="dialog" aria-labelledby="AddSubjectInstanceLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("CreateSubjectInstance")</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="subjectInstanceCreateForm" role="form" novalidate class="form-validation">
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#create-instance-details" data-toggle="tab">@L("InstanceDetails")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane animated fadeIn active" id="create-instance-details">
                            <div class="row clearfix" style="margin-top: 10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <input class="form-control" type="text" name="Name" required maxlength="@AbpUserBase.MaxUserNameLength" minlength="2">
                                            <label class="form-label">@L("InstanceName")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top: 10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <input type="text" name="Description" class="form-control" required>
                                            <label class="form-label">@L("Description")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top: 10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <input type="radio" name="InstanceType" value="Course" class="form-control" checked> @("Course")
                                            <input type="radio" name="InstanceType" value="Seminar" class="form-control"> @("Seminar")
                                            <input type="radio" name="InstanceType" value="Lab" class="form-control"> @("Lab")

                                            <label class="form-label">@L("InstanceType")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                            <button type="submit" class="btn btn-primary waves-effect" data-subject-id="@Model.SubjectId" data-prof-id="@Model.ProfId">@L("Save")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
