@using eMMA.Web.Models.Common.Modals
@model eMMA.Web.Models.UniSubjects.UniSubjectViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Edit Subject")))
<div class="modal-body">
    <form name="SubjectEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-subject-details" data-toggle="tab">@L("Subject details")</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="subject-title" type="text" name="Title" value="@Model.Title" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="subject-title" class="form-label">@L("Subject Name")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="credits" type="number" name="Credits" value="@Model.Credits" required maxlength="32" class="validate form-control">
                                <label for="credits" class="form-label">@L("Credits")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="description" type="text" name="Description" value="@Model.Description" class="validate form-control">
                                <label for="description" class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
@*<script src="~/view-resources/Views/Subjects/_EditSubjectModal.js" asp-append-version="true"></script>*@
<script src="./view-resources/Views/Subjects/_EditSubjModal.js" asp-append-version="true"></script>
