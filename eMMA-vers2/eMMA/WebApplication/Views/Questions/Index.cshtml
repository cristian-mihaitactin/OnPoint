@model IEnumerable<Question>

@{
    ViewData["Title"] = "Questions Index";
}

<h2>Index</h2>

<p>
    <a asp-controller="Questions" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var question in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => question.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => question.Text)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id= question.Id }) |
                @Html.ActionLink("Details", "Details", new { id = question.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = question.Id })
            </td>
        </tr>
}
    </tbody>
</table>
